<div id="mainLogIn">
  <div class="header">
    <h1>log in</h1>
  </div>
  <div id="logInWindow">
    <form>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-user"
          ></i></span>
        <input
          id="username"
          type="text"
          class="form-control"
          name="username"
          placeholder=" username"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="password"
          type="password"
          class="form-control"
          name="password"
          placeholder=" password"
        />
      </div>
      <input id="submitButton" class="btn btn-outline-dark" type="submit" value="submit">
      </form>
    </form>
  </div>
</div>