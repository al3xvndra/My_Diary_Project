<div id="mainLogIn">

  <div class="header">
    <h1>log in</h1>
  </div>
  <div id="logInWindow">
    {{#if errorMessages.length}}
      {{#each errorMessages}}
        <div class="alert alert-danger" role="alert">
          {{this}}
        </div>
      {{/each}}
    {{/if}}
    <form action="/logIn" method="POST">
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-user"
          ></i></span>
        <input
          id="username"
          type="text"
          class="form-control"
          name="username"
          placeholder=" username"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="password"
          type="password"
          class="form-control"
          name="password"
          placeholder=" password"
        />
      </div>
      <input
        id="submitButton"
        class="btn btn-outline-dark"
        type="submit"
        value="submit"
      />
    </form>
  </div>
</div>