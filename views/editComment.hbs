<div id="mainPosts">
  <div class="header">
    <h1>edit comment</h1>
  </div>
  <div class="commentsSection">
    <form
      action="/editComment/{{id}}/{{comment.postID}}"
      method="post"
      class="commentsGroup"
    >
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <div class="newComment">
          {{#if errorMessages.length}}
            {{#each errorMessages}}
              <div class="alert alert-danger" role="alert">
                {{this}}
              </div>
            {{/each}}
          {{/if}}
          <input
            id="comment"
            type="text"
            class="form-control"
            name="comment"
            value="{{comment.comment}}"
          />
        </div>
      </div>
      <input
        id="submitButton"
        class="btn btn-outline-dark"
        type="submit"
        value="submit"
      />
    </form>
  </div>
</div>