<div id="mainPosts">
  <div class="header">
    <h1>all posts</h1>
  </div>
  {{#if posts.length}}
    {{#each posts}}
      <div class="post">
        {{!-- <h5>{{date}}</h5> --}}
        <h4 id="title">{{title}}</h4>
        <h5>{{success}}</h5>
        <h5>{{struggle}}</h5>
        <h5>{{content}}</h5>
        <h5 id="signature">Alex</h5>
      </div>

  {{! comments section }}
  <div class="commentsSection">
    <form action="" method="post" class="commentsGroup">
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="comment"
          type="text"
          class="form-control"
          name="comment"
          placeholder=" comment here..."
        />
      </div>
      <input
        id="submitButton"
        class="btn btn-outline-dark"
        type="submit"
        value="submit"
      />
    </form>
  </div>
  <div class="commentsSection" id="existingComments">
    {{#if post.comments.length}}
      {{#each post.comments}}
        <div class="comment">
          <h5>{{comment}}</h5>
          <h5>{{id}}</h5>
        </div>
      {{/each}}
    {{else}}
      <h5>no comments yet</h5>
    {{/if}}
    
  </div>
</div>
{{/each}}
  {{else}}
    <h4 id="noContent">nothing here</h4>
  {{/if}}