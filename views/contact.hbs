<div id="mainContact">
  <div class="header">
    <h1>leave your feedback here!</h1>
  </div>
  <div id="logInWindow">
    <form action="" method="post">
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-user"
          ></i></span>
        <input
          id="feedbackName"
          type="text"
          class="form-control"
          name="feedbackName"
          placeholder=" first name"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-user"
          ></i></span>
        <input
          id="feedbackEmail"
          type="email"
          class="form-control"
          name="feedbackEmail"
          placeholder=" email"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="feedback"
          type="text"
          class="form-control"
          name="feedback"
          placeholder=" message..."
        />
      </div>
      <input
        id="submitButton"
        class="btn btn-outline-dark"
        type="submit"
        value="submit"
      />
    </form>
  </div>
</div>