<div id="mainContact">
  <div class="header">
    <h1>feedback</h1>
  </div>
  {{! <div>
    <form id="searchBar">
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="search"
          type="search"
          class="form-control"
          name="search"
          placeholder=" search"
        />
      </div>
      <input
        id="searchButton"
        class="btn btn-outline-dark"
        type="submit"
        value="search"
      />
    </form>
  </div> }}
  {{#if feedback.length}}
    {{#each feedback}}
      <div class="homePost">
        <h4 id="title">{{email}}</h4>
        <h5>{{feedback}}</h5>
        <h5 id="signature">{{name}}</h5>
        {{! edit & delete }}
        <div class="editing">
          <form action="/editFeedback/{{id}}" method="get">
            <input
              id="edit"
              class="btn btn-outline-warning"
              type="submit"
              value="edit"
            />
          </form>
          <form action="/deleteFeedback/{{id}}" method="post">
            <input
              id="delete"
              class="btn btn-outline-danger"
              type="submit"
              value="delete"
            />
          </form>
        </div>
        {{! edit & delete }}
      </div>
    {{/each}}
  {{else}}
    <h4 id="noContent">nothing here</h4>
  {{/if}}
</div>