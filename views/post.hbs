<div id="mainPosts">
  <div class="header">
    <a href="/posts" id="goBack">go back</a>
    <h1>comment below!</h1>
  </div>
  {{#if post}}
    <div class="post">
      <h4 id="title">{{post.title}}</h4>
      <h5>{{post.success}}</h5>
      <h5>{{post.struggle}}</h5>
      <h5>{{post.content}}</h5>
      <h5 id="signature">Alex</h5>
    </div>
    {{! comments section }}
    <div class="commentsSection">
      <form action="" method="post" class="commentsGroup">
        <div class="input-group">
          <span class="input-group-addon"><i
              class="glyphicon glyphicon-lock"
            ></i></span>
          <input
            id="comment"
            type="text"
            class="form-control"
            name="comment"
            placeholder=" comment here..."
          />
        </div>
        <input
          id="submitButton"
          class="btn btn-outline-dark"
          type="submit"
          value="submit"
        />
      </form>
    </div>
    <div class="commentsSection" id="existingComments">
      {{#if comments.length}}
        {{#each comments}}
          <div class="comment">
            <h5>{{comment}}</h5>
          </div>
        {{/each}}
      {{else}}
        <h5>no comments yet</h5>
      {{/if}}
    </div>
  {{else}}
    <h5>nothing here</h5>
  {{/if}}
</div>