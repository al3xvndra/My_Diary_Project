<div id="mainPosts">
  <div class="header">
    <h1>all posts</h1>
  </div>
  <div class="post">
    <form action="" method="post">
      <div class="inputField">
        <input
          id="contentDate"
          type="date"
          class="inputStyle"
          name="contentDate"
          placeholder=" date"
        />
      </div>
      <div class="inputField">
        <input
          id="contentTitle"
          type="text"
          class="inputStyle"
          name="contentTitle"
          placeholder=" title"
        />
      </div>
      <div class="inputField">
        <input
          id="content"
          type="text"
          class="inputStyle"
          name="content"
          placeholder=" content"
        />
      </div>
      <h5 id="signature">Alex</h5>
      <input id="add" class="buttonStyle" type="submit" value="post" />
    </form>
  </div>
  {{#if posts.length}}
    {{#each posts}}
      <div class="post">
        <h5>{{date}}</h5>
        <h4 id="title">{{title}}</h4>
        <h5>{{content}}</h5>
        <h5 id="signature">Alex</h5>
        <div class="editing">
        <form action="/editPost" method="post">
          <input id="edit" class="buttonStyle" type="submit" value="edit" />
          </form>
          <form action="/deletePost" method="post">
          <input id="delete" class="buttonStyle" type="submit" value="delete" />
          </form>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <h4 id="noContent">nothing here</h4>
  {{/if}}
</div>