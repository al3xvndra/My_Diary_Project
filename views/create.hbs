<div id="mainPosts">
  <div class="header">
    <h1>all posts</h1>
  </div>
  <div class="post">
    <form action="" method="post">
      {{!-- <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postDate"
          type="date"
          class="form-control"
          name="postDate"
          placeholder=" date"
        />
      </div> --}}
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postTitle"
          type="text"
          class="form-control"
          name="postTitle"
          placeholder=" title"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postSuccess"
          type="text"
          class="form-control"
          name="postSuccess"
          placeholder=" success"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postStruggle"
          type="text"
          class="form-control"
          name="postStruggle"
          placeholder=" struggle"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postContent"
          type="text"
          class="form-control"
          name="postContent"
          placeholder=" content..."
        />
      </div>
      <h5 id="signature">Alex</h5>
      <input id="add" class="buttonStyle" type="submit" value="post" />
    </form>
  </div>
  {{#if posts.length}}
    {{#each posts}}
      <div class="post">
        <h5>{{date}}</h5>
        <h4 id="title">{{title}}</h4>
        <h5>{{content}}</h5>
        <h5 id="signature">Alex</h5>
        <div class="editing">
        <form action="/editPost" method="post">
          <input id="edit" class="buttonStyle" type="submit" value="edit" />
          </form>
          <form action="/deletePost" method="post">
          <input id="delete" class="buttonStyle" type="submit" value="delete" />
          </form>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <h4 id="noContent">nothing here</h4>
  {{/if}}
</div>