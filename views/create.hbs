<div id="mainPosts">
  <div class="header">
    <h1>all posts</h1>
  </div>
  <div class="homePost">
    <form action="" method="post">
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postTitle"
          type="text"
          class="form-control"
          name="postTitle"
          placeholder=" title"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postSuccess"
          type="text"
          class="form-control"
          name="postSuccess"
          placeholder=" success"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postStruggle"
          type="text"
          class="form-control"
          name="postStruggle"
          placeholder=" struggle"
        />
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i
            class="glyphicon glyphicon-lock"
          ></i></span>
        <input
          id="postContent"
          type="text"
          class="form-control"
          name="postContent"
          placeholder=" content..."
        />
      </div>
      <h5 id="signature">Alex</h5>
      <input id="add" class="buttonStyle" type="submit" value="post" />
    </form>
  </div>
  {{#if posts.length}}
    {{#each posts}}
      <div class="homePost">
        <h4 class="title">{{title}}</h4>
        <h5 class="success"><img
            class="icon"
            src="https://img.icons8.com/wired/100/000000/thumb-up.png"
          />
          {{success}}</h5>
        <h5 class="struggle"><img
            class="icon"
            src="https://img.icons8.com/wired/100/000000/thumbs-down.png"
          />
          {{struggle}}</h5>
        <h5>{{content}}</h5>
        <h5 id="signature">Alex</h5>

        {{! edit & delete }}
        <div class="editing">
          <form action="/editPost/{{id}}" method="get">
            <input id="edit" class="buttonStyle" type="submit" value="edit" />
          </form>
          <form action="/deletePost/{{id}}" method="post">
            <input
              id="delete"
              class="buttonStyle"
              type="submit"
              value="delete"
            />
          </form>
        </div>
        {{! edit & delete }}
      </div>
    {{/each}}
  {{else}}
    <h4 id="noContent">nothing here</h4>
  {{/if}}
</div>